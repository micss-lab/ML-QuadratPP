import "../../thingml.thingml"

thing TestArithmetic includes Test 
@test "x # x"
{
  			property x : Integer = 2
  
    statechart TestPropertyPing init INIT {
    	state INIT {

    		transition -> STOP
			event m : Test?In
			guard m.c == 'x' 
			action do
				if (3 % x == 1)  //this should be parsed as (3 % x) == 1 and resolve to a Boolean
			    	TestOut('x')
			    else
			    	TestOut('z')
            end			  		
    	}

		state STOP {
			on entry TestDone()
		}
    }
}
