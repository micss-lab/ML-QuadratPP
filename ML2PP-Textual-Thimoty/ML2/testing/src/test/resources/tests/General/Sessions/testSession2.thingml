import "../../thingml.thingml"

thing TestSession2 includes Test
@test "ABC # (ABC|ACB|BAC|BCA|CAB|CBA)"
{
	property ID : Char

	property counter : Integer = 0

	message m(id : Char)
	message n(id : Char)
	message ready(id : Char)

	internal port p	{
		sends m, n, ready
		receives m, n, ready
	}

	statechart Chart init INIT {
		/*internal event Test?Done
		action TestDone()*/
		
		internal
		event e : p?n
		action do
			counter = counter + 1
			TestOut(e.id)
			if (counter == 3) TestDone()
		end

    	state INIT {
			transition -> WAIT
			event e : Test?In
			action do
				ID = e.c
				fork s
			end
    	}
    	
    	state WAIT {
    		transition -> INIT
    		action p!m(ID)    			
    	}

		session s <5> init S1 {
			state S1 {								
				transition -> S2
				event e : p?m
				guard e.id == ID
				action p!n(ID)
			}

			final state S2 {
			}
		}
    }
}
