import "../../thingml.thingml"

thing TestGuardFunction includes Test 
@test "i # EI(X)?"
@test "t # EXTE(X)?"
@test "titi # EXTEIXTEI(X)?"
{
    
    function f() : Boolean do
	    return true
	end
    
	statechart TestInternalTransition init I {	
		state I {
			on entry TestOut('E')
			on exit  TestOut('X')
			
			internal
			event m : Test?In
			guard m.c == 'i' and f()
			action TestOut('I')
			
			transition -> I
			event m : Test?In
			guard m.c == 't' and f()
			action TestOut('T')
			
			internal event Test?Done
			action TestDone()
		}
	}
}
