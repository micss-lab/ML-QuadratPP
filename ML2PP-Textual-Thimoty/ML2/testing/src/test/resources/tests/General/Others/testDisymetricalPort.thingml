import "../../thingml.thingml"

thing TestDisymetricalPort includes Test
@test "12 # I1"
{
	message m1();
	message m2();
	message m3();
	message mDone();

	provided port pin {
		receives m1, m3, mDone
	}
	required port pout {
		sends m1, m2, mDone
	}
	statechart Chart init Init {
		state Init {
			on entry do
				TestOut('I')
			end

			internal event e : Test?In
			guard e.c == '1'	
			action pout!m1()	

			internal event e : Test?In
			guard e.c == '2'		
			action pout!m2()	

			internal event pin?m1
			action TestOut('1')

			internal event pin?m3
			action TestOut('3')
			
			
			internal event Test?Done
			action pout!mDone()
			
			internal event pin?mDone
			action TestDone() 
		}
	}
}

configuration conf {
	instance test : TestDisymetricalPort
	
	connector test.pout => test.pin
}